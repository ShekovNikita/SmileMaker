<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_menu_text_style">
        <item name="android:textSize">@dimen/main_menu_text_size</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_subrayada</item>
    </style>

    <style name="main_menu_image_style">
        <item name="android:textSize">@dimen/main_menu_text_size</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_subrayada</item>
        <item name="android:paddingTop">@dimen/padding_8dp</item>
    </style>

    <style name="my_style_no_title">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">@null</item>
    </style>

    <style name="data_text_about_buyer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="data_buyer_radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="data_buyer_group">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:visibility">visible</item>
    </style>
</resources>